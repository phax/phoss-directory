<Configuration status="WARN">
    <Properties>
        <Property name="logDir">/opt/tomcat/logs</Property>
        <Property name="svc">PD-TEST</Property>
    </Properties>

    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="[%d{ISO8601}] [${svc}] [%-5level] [%t] [%t] %msg%n%throwable -- %logger{36}:%L%n"/>
        </Console>

        <RollingFile name="FILE"
                     fileName="${logDir}/pd-test.log"
                     filePattern="${logDir}/pd-test-%d{yyyy-MM-dd}-%i.log.gz">
            <PatternLayout pattern="[%d{ISO8601}] [${svc}] [%-5level] [%t] %msg%n%throwable -- %logger{36}:%L%n"/>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
            <DefaultRolloverStrategy max="1000">
                <!-- Purge anything older than 90 days -->
                <Delete basePath="${logDir}">
                    <IfFileName glob="pd-test-*.log.gz"/>
                    <IfLastModified age="90d"/>
                </Delete>
            </DefaultRolloverStrategy>
        </RollingFile>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="STDOUT"/>
            <AppenderRef ref="FILE"/>
        </Root>
    </Loggers>
</Configuration>
